<%- include('partials/header.ejs') %>

<h1>Compose</h1>
<% if (passwordCorrect) { %>
<form  action="/compose" method="post">
    <h5>Title</h5>
    <input autocomplete="off" id="composeTitle" type="text" name="postTitle">
    <h5>Post</h5>
    <textarea name="postBody" rows="10" ></textarea>
    <button class="btn" type="submit" name="compose" value="compose">Publish</button>
</form>
<% }else{ %>
    <h2>Password is incorrect. You are not allowed to post.</h2>
<% } %>
